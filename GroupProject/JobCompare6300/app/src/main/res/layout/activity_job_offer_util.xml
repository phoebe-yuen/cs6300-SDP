<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobOfferUtil">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/JobOfferUtilLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:text="@string/JobOfferUtilTitle"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/Title"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/Title"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/Company"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/Company"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/Location"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/Location"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/CostOfLivingIndex"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilCostOfLivingIndex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/CostOfLivingIndex"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/RemoteWorkTime"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilRemoteWorkTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/RemoteWorkTime"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/YearlySalary"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilYearlySalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/YearlySalary"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/YearlyBonus"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilYearlyBonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/YearlyBonus"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/RetirementBenefits"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilRetirementBenefitsPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/RetirementBenefits"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="10dip"
                android:text="@string/LeaveTime"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/JobOfferUtilLeaveTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/LeaveTime"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/JobOfferUtilAddJobOfferButton"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:text="@string/AddAnotherOffer"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/JobOfferUtilReturnMainMenuButton" />

    <Button
        android:id="@+id/JobOfferUtilReturnMainMenuButton"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:text="@string/ReturnToMainMenu"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintStart_toEndOf="@+id/JobOfferUtilAddJobOfferButton"
        app:layout_constraintEnd_toStartOf="@+id/JobOfferUtilCompareWithCurrentButton" />

    <Button
        android:id="@+id/JobOfferUtilCompareWithCurrentButton"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:text="@string/CompareWithCurrentJob"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintStart_toEndOf="@+id/JobOfferUtilReturnMainMenuButton"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>